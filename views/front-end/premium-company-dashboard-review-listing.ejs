<%- include('common/header') -%>
    <link href="/front-end/css/company-profile-dashboard.css" rel="stylesheet" type="text/css">
    <%- include('common/header-banner') -%>

        <!-- ============== Section1 Start =============== -->
        <section class="main-content premium_company_profile">
            <div class="container">
                <div class="main_box">
                    <div class="basic_info_of_company">
                        <div class="row align-items-center">
                        <div class="col-md-4 col-lg-3">
                            <div class="company_logo">
                                <% if(company && company.logo) { %>
                                    <a href="#"><img src="/<%= company.logo %>" alt="company"></a>
                                <%} else {%>
                                    <a href="#"><img src="/front-end/images/company-placeholder-image.png" alt="company"></a>
                                <% } %>
                                <div class="premium_logo"><i class="fas fa-crown"></i></div>
                            </div>
                        </div>
                        <div class="col-md-8 col-lg-6">
                            <div class="company_details">
                                <div class="row">
                                    <% if(company && company.company_name){ %>
                                    <div class="col-sm-12">
                                        <h2 class="company_name">
                                            <%= company && company.company_name ? company.company_name : '' %>
                                        </h2>
                                        <h4 class="tag_line"><%= company && company.heading ? company.heading : '' %></h4>
                                    </div>
                                    <% } %>
                                    <% if(company && company.comp_email){ %>
                                    <div class="col-sm-6">
                                        <p class="common_style"><i class="fas fa-envelope"></i><a
                                                href="mailto:<%= company.comp_email %>">
                                                <%= company.comp_email %>
                                            </a></p>
                                    </div>
                                    <% } %>
                                    <% if(company && company.comp_phone ){ %>
                                    <div class="col-sm-6">
                                        <p class="common_style"><i class="fas fa-mobile"></i><a
                                                href="tel:<%= company.comp_phone %>">
                                                <%= company.comp_phone %>
                                            </a></p>
                                    </div>
                                    <% } %>
                                    <% if(company && company.main_address ){ %>
                                    <div class="col-sm-12">
                                        <p class="common_style"><i class="fas fa-map-marker-alt"></i>
                                            <%= company.main_address %>
                                        </p>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-3">
                            <div class="overall_score">
                                <div class="social_links">
                                    <ul>
                                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                    <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                    <li><a href="#"><i class="fab fa-youtube"></i></a></li>
                                    </ul>
                                </div>
                                <div class="score_info">
                                    <div class="d-flex align-items-center mb-2">
                                    <div class="review_count">4.5</div>
                                    <div class="emoji_respective_review">
                                        <img src="/front-end/images/4-5.gif" alt="">
                                    </div>
                                    </div>
                                    <p>Total Review 1,117</p>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                    <div class="company_profile_navigation">
                    <ul>
                        <li class="active"><a href="#"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                        <li><a href="#"><i class="fas fa-envelope"></i> My Reviews</a></li>
                        <li>
                            <a href="#"><i class="fas fa-user-tie"></i> Profile</a>
                            <ul>
                                <li><a href="#">My Profile</a></li>
                                <li><a href="/company-profile-management/<%= company.ID  %>">Company Profile</a></li>
                            </ul>
                        </li>
                        <li><a href="#"><i class="fas fa-cog"></i> Settings</a></li>
                        <li><a href="#"><i class="fas fa-lock"></i> Change Password</a></li>
                        <li><a href="#"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                    </ul>
                    </div>
                </div>
                <div class="all_review_listing_for_company">
                    <div class="table-responsive">
                        <% if (finalallReviews.length === 0) { %>
                            <p>No results found.</p>
                        <% } else { %>
                        <table class="table table-hover custom-table">
                            <thead>
                                <tr>
                                    <th scope="col">Date & Time</th>
                                    <th scope="col">Comment</th>
                                    <th scope="col">Tags</th>
                                    <th scope="col">Rating</th>
                                    <th scope="col">Acticon</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% finalallReviews.forEach( review => { %>
                                <tr>
                                    <td>
                                        <% const dateString = review.created_at; %>
                                        <% const date = new Date(dateString); %>
                                        <%= date.toLocaleDateString('en-US', { day: 'numeric', month: 'long', year: 'numeric' }) %>,<br>
                                        <small><%= date.toLocaleTimeString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true }) %></small></td>
                                    <td><%- review.review_content -%></td>
                                    <td>
                                        <% review.Tags.forEach(tag => { %>
                                            <span class="badge badge-secondary"><%= tag.tag_name %></span>
                                        <% }); %>
                                    </td>
                                    <td>
                                        <% if(review.rating>=3.5){ %>
                                            <span class="badge badge-square badge-success"><%= review.rating %></span>
                                        <% }else if(review.rating>=2){ %>
                                            <span class="badge badge-square badge-warning"><%= review.rating %></span>
                                        <% }else{%>
                                            <span class="badge badge-square badge-danger"><%= review.rating %></span>
                                        <% }%>
                                    </td>
                                    <td><a class="rply_btn" href="<%- review.id -%>">Replay</a></td>
                                </tr>
                            <% }) %>
                            </tbody>
                        </table>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>
        <!-- ============== Section6 End =============== -->
        <%- include('common/footer') -%>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/css/dataTables.bootstrap4.min.css" />
        <link rel="stylesheet" href="https://cdn.datatables.net/responsive/1.0.4/css/dataTables.responsive.css" />

        <script src="https://cdn.datatables.net/1.10.5/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/plug-ins/f2c75b7247b/integration/bootstrap/3/dataTables.bootstrap.js"></script>
        <script src="https://cdn.datatables.net/responsive/1.0.4/js/dataTables.responsive.js"></script>
            <script>
                jQuery(function ($) {
                    $(document).ready(() => {
                        $('.table').DataTable();
                    });
                });
            </script>