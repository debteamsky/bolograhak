<%- include('common/header') -%>
<link href="/front-end/css/profile-dashboard-style.css" rel="stylesheet" type="text/css">
<link href="/front-end/css/company-profile-dashboard.css" rel="stylesheet" type="text/css">
<%- include('common/header-banner') -%>

<!-- ============== Section1 Start =============== -->
<section class="main-content my-profile-content complain-profile-content">
    <div class="container">
        <div class="my-profile-wrapper">
            <div class="row">
               <%- include('common/profile-sidebar') -%>
                <div class="col-md-8">
                    <div class="each_box update_basic_information all_review_listing_for_company">
                        <div class="table-responsive">
                           <% if (AllComplaintsByUserId.length===0) { %>
                              <p>No results found.</p>
                              <% } else { %>
                                 <table class="table table-hover custom-table">
                                    <thead>
                                       <tr>
                                          <th scope="col">Date</th>
                                          <th scope="col">Token</th>
                                          <th scope="col">Category</th>
                                          <th scope="col">Sub-Category</th>
                                          <th scope="col" style="width: 280px;">Product Name</th>
                                          <th scope="col">Status</th>
                                          <th scope="col" style="width: 210px; text-align: center;">Action</th>
                                       </tr>
                                    </thead>
                                    <tbody>
                                       <% AllComplaintsByUserId.forEach( compnaint=> { %>
                                          <tr role="row" class="odd">
                                             <td>
                                                <% const dateString=compnaint.created_at; %>
                                                   <% const date=new Date(dateString); %>
                                                      <%= date.toLocaleDateString('en-US', { day: 'numeric' , month: 'short' ,
                                                         year: 'numeric' }) %>
                                             </td>
                                             <td><strong>
                                                   <%= compnaint.ticket_id %>
                                                </strong></td>
                                             <td>
                                                <%= compnaint.category_name %>
                                             </td>
                                             <td>
                                                <%= compnaint.sub_category_name %>
                                             </td>
                                             <td>
                                                <%= compnaint.model_desc %>
                                             </td>
                                             <td>
                                                <% if(compnaint.status=='0' ) { %>
                                                   <span class="text-danger"><strong>Reopen</strong></span>
                                                   <% } else if(compnaint.status=='1' ) { %>
                                                      <span class="text-success"><strong>Solved</strong></span>
                                                      <% } else { %>
                                                         <span class="text-yellow"><strong>Pending</strong></span>
                                                         <% } %>
                                             </td>
                                             <td style="text-align: center;">
                                                <span class="action-select">
                                                   <span class="action-change">Action</span> <a href="" class="action-arw"><i
                                                         class="fa-solid fa-angle-down"></i></a>
                                                   <div class="action-dropdown">
                                                      <ul class="p-0 m-0">
                                                         <li><a href="">Reopen</a></li>
                                                <li><a href="#" data-bs-toggle="modal" data-bs-target="#giveratingmodal">Give your rating</a></li>
                                                      </ul>
                                                   </div>
                                                </span>
                                             </td>
                                          </tr>
                                       <% }) %>
                                    </tbody>
                                 </table>
                              <% } %>
                        </div>
                     </div>
                </div>
            </div>
        </div>
    </div>
</section>   

<!-- The Modal -->
<div class="modal fade" id="giveratingmodal">
   <div class="modal-dialog">
     <div class="modal-content">
 
       <!-- Modal Header -->
       <div class="modal-header border-0">
         <button type="button" class="btn-close" data-bs-dismiss="modal"><i class="fa-solid fa-circle-xmark"></i></button>
       </div>
 
       <!-- Modal body -->
       <div class="modal-body">
         <div class="survey-wrapper mt-0">
            <div class="survey-body">
               <div class="survey-rating">
                  <div class="survey-rating-part">
                     Disappointing
                  </div>
                  <div class="survey-rating-part">
                     <div class="form-check position-relative custom-check">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" checked>
                        <label class="form-check-label" for="inlineRadio1"><img src="/1691875890277-10.High.gif" alt="gif"></label>
                      </div>
                      <div class="form-check position-relative custom-check">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option1">
                        <label class="form-check-label" for="inlineRadio2"><img src="/1691875890277-10.High.gif" alt="gif"></label>
                      </div>
                      <div class="form-check position-relative custom-check">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option1">
                        <label class="form-check-label" for="inlineRadio3"><img src="/1691875890277-10.High.gif" alt="gif"></label>
                      </div>
                      <div class="form-check position-relative custom-check">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="option1">
                        <label class="form-check-label" for="inlineRadio4"><img src="/1691875890277-10.High.gif" alt="gif"></label>
                      </div>
                      <div class="form-check position-relative custom-check">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="option1">
                        <label class="form-check-label" for="inlineRadio5"><img src="/1691875890277-10.High.gif" alt="gif"></label>
                      </div>
                     <!-- <ul>
                        <li><a href="#"><img src="/1691875890277-10.High.gif" alt="gif"></a></li>
                        <li class="active"><a href="#"><img src="/1691875890277-10.High.gif" alt="gif"></a></li>
                        <li><a href="#"><img src="/1691875890277-10.High.gif" alt="gif"></a></li>
                        <li><a href="#"><img src="/1691875890277-10.High.gif" alt="gif"></a></li>
                        <li><a href="#"><img src="/1691875890277-10.High.gif" alt="gif"></a></li>
                     </ul> -->
                  </div>
                  <div class="survey-rating-part">
                     Excellent
                  </div>
               </div>
            </div>
         </div>
         <input type="submit" class="btn-default btn-warning mt-3" value="Submit"> 
       </div>
     </div>
   </div>
 </div>
<!-- ============== Section1 End =============== -->

